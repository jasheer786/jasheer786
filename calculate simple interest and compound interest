#include<stdio.h>
#include<math.h>
int main()
{
float principle,rate,years,s1,c1;
printf("enter the principle amount:");
scanf("%f",&principle);
printf("enter the number of years:");
scanf("%f",&years);
printf("enter the rate of interest:");
scanf("%f",&rate);
s1=(principle*years*rate)/100;
printf("simple interest =%f\n",s1);
c1=principle*(pow((1+rate/100),years));
printf("compound interest =%f",c1);
return 0;
}
